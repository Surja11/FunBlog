@model Blog.ViewModels.HomeVM

@{
    ViewData["Title"] = "Home Page";
}
<header class="masthead" style="background-image: url('/Blog/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Fun Blog</h1>
                    <span class="subheading">A Blog For Fun Topics </span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            @foreach (var post in Model.Posts!) { 

                <!-- Post preview-->
                <div class="post-preview">
                    <a asp-action="Post" asp-controller="Blog" asp-route-slug="@post.Slug">
                        <h2 class="fw-bold mb-4">@post.Title</h2>
                        <h3 class="post-subtitle">@post.ShortDescription</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">@post.ApplicationUser!.FirstName @post.ApplicationUser!.LastName</a>
                        on @post.CreatedDate.ToShortDateString()
                    </p>
                </div>

                <!-- Divider-->
                <hr class="my-4" />
         }
            <!-- Pager-->
            <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a></div>
        </div>
    </div>
</div>