@model List<Blog.ViewModels.UserVM>
@{
    ViewData["Title"] = "Users";
}

    <!-- Begin Page Content -->
<div class="container-fluid">
    <a class="btn btn-primary mb-2" asp-action ="Register" asp-controller="User">Add User</a>
    <div class=" card ">
       <div class=" card-header bg-primary">
           <h4 class="card-title text-white">List of Users</h4>
       </div>
       <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
               <thead>
                   <tr>
                       <th>First Name</th>
                       <th>Last Name</th>
                       <th>UserName</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Action</th>
                   </tr>
               </thead>
               <tbody>
                   @foreach(var user in Model){
                       <tr>
                           <td>@user.FirstName</td>
                           <td>@user.LastName</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Roles</td>
                            <td>
                                <a class="btn btn-secondary " asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.Id">Reset Password</a>
                            </td>

                       </tr>
                   }
               </tbody>
           </table>
       </div>

    </div>
</div>