
@model List<Blog.ViewModels.PostVM>

@{
    ViewData["Title"] = "Lists of Posts";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <a class="btn btn-primary mb-2" asp-action="Create" asp-controller="Post" asp-area="Admin" >Add Post</a>
    <div class=" card ">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">List of Posts</h4>

        </div>
        <div class="card-body container-f" style="background-color: #98c1d9">

            @foreach(var post in Model){
                <div class="rounded mb-4 p-2" style="background-color:#e0fbfc" >
                    <div class="row">

                        <div class="col-2 d-flex justify-content-center flex-column">
                            @if (post.ThumbnailUrl == "") {
                                <img class="img-fluid" src="~/Thumbnail/images.png" alt="Alternate Text"  style="object-fit:cover; height:100%;width: 100% " />
                            }


                            else {
                                <img class="img-fluid" src="~/Thumbnail/@post.ThumbnailUrl" alt="Alternate Text" height="120px" width="150px" style="object-fit:cover; height: 100%; width: 100%" />
                            }
                        </div>

                        <div class="col-5 d-flex justify-content-center flex-column">
                            <h4 style="font-weight: bolder;">@post.Title</h4>
                            <p>@post.CreatedDate</p>
                        </div>

                        <div class="col-5 text-right d-flex justify-content-center flex-column">
                            <h4 style="font-size:1.3rem;" >@post.AuthorName</h4>
                            <div class="d-flex justify-content-end align-item-center">
                                <p>
                                    <a class="btn btn-primary m-1" asp-action="Edit" asp-controller="Post" asp-area="Admin" asp-route-id="@post.Id">Edit</a>
                                    <form method="post" asp-action="Delete" asp-controller="Post" asp-area="Admin" asp-route-id="@post.Id">

                                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                                    </form>


                                </p>
                            </div>
                            
                        </div>

                    </div>



                </div>


        }
           
        </div>
    </div>
</div>